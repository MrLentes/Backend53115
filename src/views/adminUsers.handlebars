<h1>Gesti√≥n de Usuarios</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.first_name}} {{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>
        <form action="/api/users/{{this._id}}/role" method="POST">
          <select name="role">
            <option value="user" {{#ifCond this.role '==' 'user'}}selected{{/ifCond}}>Usuario</option>
            <option value="premium" {{#ifCond this.role '==' 'premium'}}selected{{/ifCond}}>Premium</option>
            <option value="admin" {{#ifCond this.role '==' 'admin'}}selected{{/ifCond}}>Admin</option>
          </select>
          <button type="submit">Actualizar</button>
        </form>
      </td>
      <td>
        <form action="/api/users/{{this._id}}" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
